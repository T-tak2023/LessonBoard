<div class="mt-5 mx-4">
  <div class="card border-primary mb-3 mx-auto" style="max-width: 30rem;">
    <div class="card-header">
      <h2 class="mb-0"><i class="bi bi-pencil-square"></i> プロフィール編集</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @instructor, url: instructor_profile_edit_path, local: true) do |f| %>
        <div class="text-center mb-4 py-4 bg-light">
          <% if @instructor.icon_image? %>
            <%= image_tag @instructor.icon_image.url, size: "200x200", class: "img-fluid rounded-circle" %>
          <% else %>
            <%= image_tag 'default_icon.png', alt: 'ユーザーアイコン', size: "200x200", class: "img-fluid rounded-circle" %>
          <% end %>
        </div>

        <div class="mb-5">
          <h4 class="card-title"><i class="bi bi-image"></i> アイコン画像</h4>
          <%= f.file_field :icon_image, class: "form-control" %>
        </div>

        <div class="mb-5">
          <h4 class="card-title"><i class="bi bi-person"></i> 名前</h4>
          <%= f.text_field :instructor_name, class: "form-control" %>
        </div>

        <div class="mb-5">
          <h4 class="card-title"><i class="bi bi-clipboard"></i> 担当コース/楽器</h4>
          <%= f.text_area :course, class: "form-control" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "編集を完了する", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3 text-end">
        <%= link_to '戻る', :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
