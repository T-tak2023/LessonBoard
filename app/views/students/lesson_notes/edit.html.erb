<h1>レッスンノート編集</h1>

<%= form_with model: @lesson_note, url: students_lesson_note_path(@lesson_note), method: :patch do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div>
    <%= form.label :student_memo, "生徒用メモ" %>
    <%= form.text_area :student_memo, placeholder: "ここにメモを記入してください" %>
  </div>
  <div>
    <%= form.submit "更新" %>
  </div>
<% end %>

<%= link_to '戻る', students_lesson_note_path(@lesson_note) %>
