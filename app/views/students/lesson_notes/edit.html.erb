<div class="mt-5 mx-4">
  <div class="card border-primary mb-3 mx-auto" style="max-width: 30rem;">
    <div class="card-header">
      <h2 class="mb-0"><i class="bi bi-pencil-square"></i> レッスンノート編集</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @lesson_note, url: students_lesson_note_path(@lesson_note), method: :patch, local: true do |form| %>
        <%= render 'shared/error_messages', object: form.object %>

        <div class="p-3 mb-3 bg-light">
          <h4 class="card-title text-start"><i class="bi bi-sticky"></i> 生徒用メモ</h4>
          <%= form.text_area :student_memo, placeholder: "ここにメモを記入してください", class: "form-control", rows: 15 %>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit "更新する", class: "btn btn-primary" %>
        </div>

        <div class="mt-3 text-center">
          <%= link_to '戻る', :back, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
