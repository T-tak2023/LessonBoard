<h1>レッスンノート一覧</h1>

<table>
  <thead>
    <tr>
      <th>講師名</th>
      <th>レッスン日</th>
      <th>レッスン内容</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
    <% @lesson_notes.each do |lesson_note| %>
      <tr>
        <td><%= lesson_note.instructor_name %></td>
        <td><%= lesson_note.lesson_date.strftime('%Y-%m-%d') %></td>
        <td><%= lesson_note.content %></td>
        <td><%= lesson_note.log_status %></td>
        <td>
          <%= link_to '詳細', students_lesson_note_path(lesson_note) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
